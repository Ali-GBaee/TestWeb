@{
    ViewData["Title"]="Home Page";
}

<main class="main-content">
    <section class="widgets-grid">
        <!-- Weather Widget -->
        <div class="widget weather">
          <h2><i class="fas fa-cloud-sun"></i> Weather</h2>
          <div class="weather-info">
            <div class="temp">24°C</div>
            <div class="location">San Francisco</div>
            <div class="forecast">Sunny with clouds</div>
          </div>
        </div>
        
        <!-- Calendar Widget -->
        <div class="widget calendar">
          <h2><i class="fas fa-calendar-alt"></i> Calendar</h2>
          <div class="month">April 2025</div>
          <div class="days-grid">
            <div class="day-header">Sun</div>
            <div class="day-header">Mon</div>
            <div class="day-header">Tue</div>
            <div class="day-header">Wed</div>
            <div class="day-header">Thu</div>
            <div class="day-header">Fri</div>
            <div class="day-header">Sat</div>

            <!-- Calendar days would be generated by JavaScript -->
            <div class="day">30</div>
            <div class="day">31</div>
            <div class="day">1</div>
            <div class="day">2</div>
            <div class="day">3</div>
            <div class="day">4</div>
            <div class="day">5</div>
            <div class="day today">6</div>
            <div class="day">7</div>
            <!-- More days... -->
          </div>
        </div>

        <!-- Tasks Widget -->
        <div class="widget tasks ">
            <h2><i></i> My Skill</h2>
            <ul>
                <li > Test</li>
                <li> Test</li>
                <li> Test</li>
                <li> Test</li>
            </ul>
            <button class="add-task">+ Add Skill</button>
        </div>

        

        <!-- Stats Widget -->
        <div class="widget stats">
            <h2><i class="fas fa-chart-pie"></i> Statistics</h2>
            <div class="stat-item">
                <div class="stat-value">1,254</div>
                <div class="stat-label">Visitors</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">87%</div>
                <div class="stat-label">Engagement</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">$3,254</div>
                <div class="stat-label">Revenue</div>
            </div>
        </div>
    </section>

    <!-- Recent Activity -->
    <section class="activity">
        <h2><i class="fas fa-history"></i> Recent Activity</h2>
        <div class="activity-item">
            <div class="activity-icon"><i class="fas fa-file-upload"></i></div>
            <div class="activity-content">
                <p>Uploaded project files</p>
                <small>10 minutes ago</small>
            </div>
        </div>
        <div class="activity-item">
            <div class="activity-icon"><i class="fas fa-user-plus"></i></div>
            <div class="activity-content">
                <p>New team member added</p>
                <small>2 hours ago</small>
            </div>
        </div>
        <div class="activity-item">
            <div class="activity-icon"><i class="fas fa-check-circle"></i></div>
            <div class="activity-content">
                <p>Completed sprint review</p>
                <small>Yesterday</small>
            </div>
        </div>
    </section>
</main>
